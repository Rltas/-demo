/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
  background: #edeeee;
}

.swiper-container {
  width: 100%;
}

swiper-item {
  width: 100%;
  display: flex;
  flex: 1;
  justify-content: space-around;
}

swiper-item image {
  width: 96%;
}

.msgs {
  width: 40rpx;
  height: 36rpx;
  position: fixed;
  top: 6px;
  right: 0;
}

#nav {
  width: 96%;
  display: flex;
  justify-content: space-between;
  height: 180rpx;
  margin: 10px auto;
  color: #711fe1;
  font-size: 15px;
  background: #fff;
}

.nav-section {
  width: 22%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.nav-img {
  width: 120rpx;
  height: 120rpx;
}

#section {
  width: 96%;
  height: 200rpx;
  margin: 16px auto;
  display: flex;
  background: #fff;
  justify-content: space-around;
  align-items: center;
}

#section image {
  width: 280rpx;
  height: 160rpx;
  margin-left: 6px;
}

.section-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 12px;
  box-sizing: border-box;
  height: 160rpx;
}

.section-text text:nth-child(1) {
  color: red;
  font-size: 18px;
}

.section-text text:nth-child(2) {
  margin-bottom: 60rpx;
  font-size: 15px;
  color: #666;
}

#works {
  width: 100%;
  padding: 2%;
  margin-top: 12px;
  background: #fff;
  display: flex;
  justify-content: space-between;
  height: 110rpx;
  border-bottom: 1px solid #e3e3e3;
  box-sizing: border-box;
  font-size: 16px;
  align-items: center;
}

.works-section {
  display: flex;
  flex-direction: column;
  font-size: 15px;
  color: #888;
}

#btn-text {
  width: 100%;
  height: 110rpx;
  display: flex;
  background: #fff;
  padding: 0 3%;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 12px;
  align-items: center;
  font-size: 16px;
}

.msg1, .msg2 {
  width: 20%;
  text-align: center;
  border-radius: 25px;
  height: 46rpx;
}

.msg1 {
  border: 1px solid #7325e2;
  color: #7325e2;
}

.msg2 {
  border: 1px solid #e94cee;
  color: #e94cee;
}

#classfiy {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-bottom: 1px solid #e3e3e3;
  font-size: 16px;
  line-height: 82rpx;
  padding: 0 4%;
  color: #333;
}

#designer image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

#designer {
  width: 100%;
  height: 180rpx;
  background: #fff;
  margin-bottom: 12px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 4%;
}

.deText {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  margin-left: 10px;
  box-sizing: border-box;
}
#details{
  width: 100%;
  background: #ffffff;
  height: 300rpx;
}
#details image{
  width: 90%;
  height: 280rpx;
  margin: 10rpx 5%;
}